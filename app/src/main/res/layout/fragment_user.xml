<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.UserFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ava_IV"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <TextView
            android:id="@+id/name_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/ava_IV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="15dp"
            android:text="Name"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/desc_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/name_TV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:text="Дай вам Бог всего вдвойне, чего желаете вы мне!"
            />
        <LinearLayout
            android:id="@+id/city_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/desc_TV">
            <TextView
                android:id="@+id/userCity_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="City: "
                android:textSize="20sp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/city_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Almaty"
                android:gravity="right"
                android:layout_marginEnd="10dp"
                android:textSize="20sp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/uni_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/city_LL">
            <TextView
                android:id="@+id/userUniversity_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="University: "
                android:textSize="20sp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/university_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="AUPET"
                android:gravity="right"
                android:layout_marginEnd="10dp"
                android:textSize="20sp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/quote_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/uni_LL">
            <TextView
                android:id="@+id/userQuote_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quote: "
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/quote_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Мужчине не понять, как сложно женщине балансировать между недоступностью и похотливостью.
Женщине не понять, как сложно мужчине балансировать между настойчивостью и навязчивостью.
Так и живем в цирке."
                android:textSize="17sp"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</FrameLayout>